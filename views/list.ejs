<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(e => { %>
    <form action="/delete" method="POST">
      <div class="item">
        <input type="checkbox" name="checkbox"  value="<%= e._id %>" onchange="this.form.submit()" />
        <p><%= e.name %></p>
      </div>

      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
  <% }); %> 

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<div class="box">
  <div class="item">
    <h2>Lists</h2>
  </div>
  <div class="item">
    <a href="/"><p>Today</p></a>
  </div>
  <% lists.forEach(e => { %>
    <div class="item">
      <a href="/<%= e %>"><p><%= e %></p></a>
    </div>
  <% }); %>
</div>

<%- include("footer") -%>
